<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>




  <form class="form-horizontal">
    <fieldset>
      <legend>ログイン</legend>
      <div class="form-group">
        <%= f.label :Name, class: "col-lg-2 control-label" %><br />
        <div class="col-lg-10">
          <%= f.text_field :name, autofocus: true, class: "form-control", id: "inputName", placeholder: "Name" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :Email, class: "col-lg-2 control-label" %><br />
        <div class="col-lg-10">
          <%= f.text_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email" %>
        </div>
      </div>

      <br />

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, class: "col-lg-2 control-label" %><i>(leave blank if you don't want to change it)</i>
        <div class="col-lg-10">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: "Password" %>
        </div>
      </div>

      <br />
      <br />

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: "Password" %>
        </div>
      </div>

      <br />
      <br />

      <div class="form-group">
        <%= f.label :current_password, class: "col-lg-2 control-label" %> <i>(we need your current password to confirm your changes)</i><br />
        <div class="col-lg-10">
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: "Current Password" %>
        </div>
      </div>

      <br />
      <br />

      <div class="form-group">
        <%= f.label :gender, class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.select(:gender, options_for_select({"Man" => "man", "Woman" => "woman"}), {class: "form-control", id: "select"}) %>
        </div>
      </div>

      <br />
      <br />

      <div class="form-group">
        <%= f.label :birthday, class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.date_field :birth_date, class: "form-control" %>
        </div>
      </div>

      <br />
      <br />

      <div class="form-group">
        <%= f.label "年齢を公開する", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
        <%= f.select :bd_open, {"Open" => "open", "Not Open" => "not_open"}%>
        </div>
      </div>

      <br />
      <br />

      <div class="form-group">
        <%= f.label "好きな音楽のジャンル", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
        <%= f.select :fav_music_genre, [["Pops", "pops"], ["Rock", "rock"], ["Jazz", "jazz"], ["Classic", "classic"], ["Others", "others"]] %>
        </div>
      </div>

      <br />
      <br />

      <div class="form-group">
        <%= f.label :image, class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
        <%= f.file_field :image %>
        </div>
      </div>

      <br />
      <br />

      <div class="form-group">
        <%= f.label "自己紹介", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
        <%= f.text_area :comment %>
        </div>
      </div>

      <br />
      <br />

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      </div>
    </fieldset>
  </form>
<% end %>


  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

  <%= link_to "Back", :back, class: "btn btn-ink" %>
