<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <div class="btn-group-vertical">
      <h4>
        ジャンル一覧
      </h4>
      <a>
        <%= link_to 'Pops', each_genre_playlists_path(:id => 0), class: "btn btn-default"  %>
      </a>

      <a>
        <%= link_to 'Rock', each_genre_playlists_path(:id => 1), class: "btn btn-default"  %>
      </a>

      <a>
        <%= link_to 'Jazz', each_genre_playlists_path(:id => 2), class: "btn btn-default"  %>
      </a>

      <a>
        <%= link_to 'Classic', each_genre_playlists_path(:id => 3), class: "btn btn-default"  %>
      </a>

      <a>
        <%= link_to 'Others', each_genre_playlists_path(:id => 4), class: "btn btn-default"  %>
      </a>
      </div>
    </div>

    <h2>
      <% case @genre
        when "0" %> 
        Pops
      <% when "1" %>
        Rock
      <% when "2" %>
        Jazz
      <% when "3" %>
        Classic
      <% when "4" %>
        Others
      <% else %>
        存在しないジャンルです
      <% end %>
    </h2>
    <div class="col-sm-10">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>プレイリスト名</th>
            <th>お気に入り数</th>
            <th>更新日時</th>
          </tr>
        </thead>
        <% @playlists.each do |playlist| %>
          <tbody>
            <tr>
              <td>
                <%= link_to playlist.user.name, user_path(id: playlist.user.id) %>
                </td>
              <td>
                <%= link_to playlist.title, playlist_path(id: playlist.id) %>
                </td>
              <td>
                <%= playlist.favorites.count %>
                </td>
              <td>
              <% update_time = playlist.updated_at %>
              <%= update_time.strftime("%Y-%m-%d %H:%M:%S") %>
                </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </ol>
  </div>
</div>
</div>
