<h2>新着プレイリスト</h2>
<div class="container-fluid">
  <div class="row">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>プレイリスト名</th>
          <th>お気に入り数</th>
          <th>更新日時</th>
        </tr>
      </thead>
      <% i = 0 %>
      <% @playlists.each do |playlist| %>
        <tbody>
          <tr>
            <td>
              <%= link_to @user_name_array[i], user_path(id: @playlist_user_ids[i]) %>
              </td>
            <% i += 1 %>
            <td>
              <%= link_to playlist.title, playlist_path(id: playlist.id) %>
              </td>
            <td>
                <%= playlist.favorites.count %>
              </td>
            <td>
              <% update_time = playlist.updated_at %>
              <%= update_time.strftime("%Y-%m-%d %H:%M:%S") %>
              </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
