<h2>タイムライン</h2>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <h5>フォロー一覧</h5>
      <div class="btn-group-vertical">
        <% @follows.each do |follow| %>
          <%= link_to follow.name, user_path(id: follow.id), class: "btn btn-default" %>
          <%= link_to "フォロー解除", user_relationship_path(user_id: follow.id, id: current_user.id), class: "btn btn-link btn-xs", method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-9">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>プレイリスト名</th>
            <th>お気に入り数</th>
            <th>更新日時</th>
          </tr>
        </thead>
        <% @playlists.each do |playlist| %>
          <tbody>
            <tr>
              <td>
                <%= link_to playlist.user.name, user_path(id: playlist.user.id) %>
              </td>
              <td>
                <%= link_to playlist.title, playlist_path(id: playlist.id) %>
              </td>
              <td>
                <%= playlist.favorites.count %>
              </td>
            <td>
              <% update_time = playlist.updated_at %>
              <%= update_time.strftime("%Y-%m-%d %H:%M:%S") %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
