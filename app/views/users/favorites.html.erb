<h2>お気に入り一覧</h2>

<div class="container-fluid">
  <div class="row">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>プレイリスト名</th>
          <th>お気に入り数</th>
          <th>更新日時</th>
        </tr>
      </thead>
      <% @playlists.each do |playlist| %>
        <tbody>
          <tr>
            <td>
              <%= link_to playlist.user.name, user_path(id: playlist.user.id) %>
            </td>
            <td>
              <%= link_to playlist.title, playlist_path(id: playlist.id) %>
            </td>
              <td>
                <%= playlist.favorites.count %>
                </td>
            <td>
              <% update_time = playlist.updated_at %>
              <%= update_time.strftime("%Y-%m-%d %H:%M:%S") %>
              </td>
              <td>
              <%= link_to "お気に入りから削除", destroy_playlist_favorites_path(playlist_id: playlist.id, user_id: current_user.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-warning" %>
                </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
