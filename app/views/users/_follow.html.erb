<div class="container-fluid">
  <div class="row">
    <div class="col-sm-5">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>#</th>
            <th>ユーザー名</th>
          </tr>
        </thead>
        <% i = 0 %>
        <% @users.each do |user|%>
          <tbody>
            <tr>
              <td>
                <%= i += 1 %>
              </td>
              <td>
                <%= link_to user.name, user_path(id: user.id) %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
