<%= form_for @playlist do |f| %>

  <fieldset>
    <legend>Legend</legend>
    <div class="form-group">
      <%= f.label :Title, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :Comment, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_area :comment, class: "form-control", rows: 3, placeholder: "Comment" %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :Genre,  class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.select(:genre, options_for_select([["Pops", "pops"], ["Rock", "rock"], ["Jazz", "jazz"], ["Classic", "classic"], ["Others", "others"]]), {class: "form-control", id: "select"}) %>

      </div>
    </div>

    <div>
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit :value => "プレイリスト登録", class: "btn btn-primary" %>  
      </div>
    </div>

    </fieldset>
  <% end %>
