<h2>マイページ</h2>

<h4>自分の作成したプレイリスト一覧</h4>

  <div class="col-sm-12">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>プレイリスト名</th>
          <th>お気に入り数</th>
          <th>更新日時</th>
        </tr>
      </thead>
      <% i = 0 %>
      <% @playlists.each do |playlist| %>
        <tbody>
          <tr>
            <td>
              <%= link_to playlist.title, playlist_path(id: playlist.id) %>
            </td>
            <td>
              <%= playlist.favorites.count %>
            </td>
            <td>
              <% update_time = playlist.updated_at %>
              <%= update_time.strftime("%Y-%m-%d %H:%M:%S") %>
              </td>
              <td>
    <%= link_to '登録曲編集', new_playlist_music_path(playlist_id: playlist.id), class: "btn btn-default" %>
    <%= link_to 'プレイリスト編集', edit_playlist_path(id: playlist.id), class: "btn btn-default" %>
              <%= link_to "削除", playlist_path(id: playlist.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
              </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
